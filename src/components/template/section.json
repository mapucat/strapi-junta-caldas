{
  "collectionName": "components_template_sections",
  "info": {
    "displayName": "Section",
    "description": ""
  },
  "options": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "title": {
      "type": "component",
      "repeatable": false,
      "component": "section.heading"
    },
    "image": {
      "type": "component",
      "repeatable": false,
      "component": "shared.media"
    },
    "priority": {
      "type": "integer",
      "required": true
    },
    "style": {
      "type": "enumeration",
      "enum": [
        "primary",
        "secondary",
        "content"
      ],
      "required": true,
      "default": "secondary"
    },
    "textAlign": {
      "type": "enumeration",
      "enum": [
        "center",
        "right",
        "left"
      ],
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "services": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::service.service"
    },
    "articles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::article.article"
    },
    "document": {
      "type": "component",
      "repeatable": false,
      "component": "shared.document"
    }
  }
}
